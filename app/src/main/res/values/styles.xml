<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RecipeTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:elevation" tools:targetApi="lollipop">@dimen/dp_10</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="RecipeItemTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="OptionTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HideTitleExpand" parent="TextAppearance.AppCompat">
        <item name="android:textSize">0sp</item>
    </style>

    <style name="DietChip" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="android:padding">@dimen/dp_10</item>
        <item name="closeIconVisible">false</item>
        <item name="android:textAlignment">center</item>
        <item name="android:radius">@dimen/dp_5</item>
        <item name="chipBackgroundColor">@color/color_blue_bright</item>
    </style>

    <style name="TextTitleRecipeLarge" parent="Widget.AppCompat.TextView">
        <item name="android:background">@color/color_background_dark</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/dp_10</item>
        <item name="android:paddingBottom">@dimen/dp_10</item>
        <item name="android:textSize">@dimen/sp_24</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
